pipeline {
    agent any

    environment {
        DOCKER_IMAGE_NAME = "ros2_video_ws"
        DOCKER_COMPOSE_FILE = "docker-compose.yml"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Girish-339/ROS2_VIDEO_WS.git'
            }
        }

        stage('Build Docker Images') {
            steps {
                echo "Building Docker images..."
                sh "docker build -t $DOCKER_IMAGE_NAME ./docker"
                sh "docker build -t mediamtx ./mediamtx"
            }
        }

        stage('Run Tests') {
            steps {
                echo "Running ROS2 Python tests..."
                sh "pytest src/video_pub_sub/test"
                sh "pytest src/yolo_detector/test"
            }
        }

        stage('Docker Compose Up') {
            steps {
                echo "Starting Docker Compose..."
                sh "docker-compose -f $DOCKER_COMPOSE_FILE up -d --build"
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed. Check logs.'
        }
    }
}
